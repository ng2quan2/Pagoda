<ul class="list-group m-2">
    <li class="list-group-item">
        <div>
            <label>Họ Tên Thành Viên Gia Đình</label>
        </div>

        <div>
            @Html.DisplayFor(model => model.FullName)
        </div>
    </li>

    @*<li class="list-group-item">
            <div>
                <label>Pháp Danh</label>
            </div>

            <div>
                @Html.DisplayFor(model => model.NickName)
            </div>
        </li>*@

    <li class="list-group-item">
        <div>
            <label>Giới Tính</label>
        </div>

        <div>
            @if (@Model.Sex == true)
            {
                <div>Nam</div>
            }
            else if (@Model.Sex == false)
            {
                <div>Nữ</div>
            }
        </div>
    </li>

    <li class="list-group-item">
        <div>
            <label>Tuổi</label>
        </div>

        <div>
            @Html.DisplayFor(model => model.Age)
        </div>
    </li>

    <li class="list-group-item">
        <div>
            <label>Sao Chiếu Mệnh</label>
        </div>

        <div>
            @Html.DisplayFor(model => model.Star.StarName)
        </div>
    </li>

    <li class="list-group-item">
        <div>
            <label>Hạn Kiết Hung</label>
        </div>

        <div>
            @Html.DisplayFor(model => model.Threat.ThreatName)
        </div>
    </li>
</ul>

<div class="form-group">
