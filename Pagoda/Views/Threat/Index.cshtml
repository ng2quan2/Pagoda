<script type="text/javascript">
    function CreateStar() {
        var div = $("#OpenDilog");
        div.load("/Threat/Create", function () {
            div.dialog({
                modal: true,
                title: "Thêm Hạn Kiết Hung Mới",
                resizable: false,
                dialogClass: "my-dialog-class",
                position: 'center',
                show: { effect: 'fade', duration: 400 }
            });
        });
    }

    function EditThreat(ThreatID) {
        var div = $("#OpenDilog");
        div.load("/Threat/Edit?ThreatID=" + ThreatID, function () {
            div.dialog({
                modal: true,
                dialogClass: "my-dialog-class",
                title: "Chỉnh Sửa Hạn Kiết Hung",
                resizable: false,
                position: 'center',
                show: { effect: 'fade', duration: 400 }
            });
        });
    }

    $('body').on('change', '#SelectAll', function () {
        var checkStatus = this.checked;
        var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
        checkbox.each(function () {
            this.checked = checkStatus;
            if (this.checked) {
                checkbox.attr('selected', 'checked');
            } else {
                checkbox.attr('selected', '');
            }
        });
    });

    $('body').on('click', '#btnDeleteAll', function (e) {
        e.preventDefault();
        var str = "";
        var checkbox = $(this).parents('.card').find('tr td input:checkbox');
        var i = 0;
        checkbox.each(function () {
            if (this.checked) {
                checkbox.attr('selected', 'checked');
                var _id = $(this).val();
                if (i === 0) {
                    str += _id;
                } else {
                    str += "," + _id;
                }
                i++;
            } else {
                checkbox.attr('selected', '');
            }
        });
        if (str.length > 0) {
            var conf = confirm('Bạn có muốn xóa các bản ghi này không ?');
            if (conf === true) {
                $.ajax({
                    url: '/Threat/DeleteAll',
                    type: 'POST',
                    data: { ids: str },
                    success: function (rs) {
                        if (rs.success) {
                            location.reload();
                        }
                    }
                });
            }
        }
    });

</script>