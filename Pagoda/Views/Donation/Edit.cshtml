@model Pagoda.Models.Donation

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DonationID)

    <div class="form-group">
        <div class="text-bold mb-2">Họ Tên</div>
        <div class="col-md-12">
            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Họ Tên" } })
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <div class="text-bold mb-2">Tuổi</div>
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @style = "margin-left: 7px", placeholder = "Xin Mời Nhập Tuổi" } })
                @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                <div class="text-bold mb-2">Tịnh Tài</div>
                @Html.EditorFor(model => model.Asset, new { htmlAttributes = new { @class = "form-control", @style = "width: 296.7px;", placeholder = "Xin Mời Nhập Tịnh Tài" } })
                @Html.ValidationMessageFor(model => model.Asset, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="text-bold mb-2">Địa Chỉ</div>
        <div class="col-md-12">
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Địa Chỉ" } })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="text-bold mb-2">Tịnh Vật</div>
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Thing, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Tịnh Vật" }, @style = "width: 100%; margin-top: 1px; border: 1px solid grey; border-radius: 4px; padding: 8px" })
            @Html.ValidationMessageFor(model => model.Thing, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 text-right" style="margin-left: 103px;">
            <input type="submit" value="Lưu" class="btn btn-danger" />
        </div>
    </div>
</div>
}

<link href="@Url.Content("~/Content/Clients/plugins/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/Clients/plugins/jquery-ui/jquery-ui.min.js")" type="text/javascript"></script>