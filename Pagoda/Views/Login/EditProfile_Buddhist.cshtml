@model Pagoda.Models.Buddhist

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <div class="text-bold mb-2">Họ Tên</div>
                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Họ Tên" } })
                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <div class="text-bold mb-2">Pháp Danh</div>
                    @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Pháp Danh" } })
                    @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <div class="text-bold mb-2">Tuổi</div>
                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Tuổi" } })
                    @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <div class="text-bold mb-2">Giới Tính</div>
                    @Html.DropDownListFor(model => model.Sex, new SelectList(new[] { new { Value = true, Text = "Nam" }, new { Value = false, Text = "Nữ" } }, "Value", "Text"), "Chọn Giới Tính", new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <div class="text-bold mb-2">
                        Số Điện Thoại
                        @*<a href="#" style="float: right">Thay Đổi</a>*@
                    </div>

                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Số Điện Thoại" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                </div>

                <div class="col-md-6">
                    <div class="text-bold mb-2">Tên Hiển Thị</div>
                    @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Mật Khẩu" } })
                    @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <div class="text-bold mb-2">Địa Chỉ</div>
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Xin Mời Nhập Địa Chỉ" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <div class="text-bold mb-2">Quy Y</div>
                    @Html.DropDownListFor(model => model.Status, new SelectList(new[] { new { Value = true, Text = "Tại Chùa" }, new { Value = false, Text = "Tại Gia" } }, "Value", "Text"), "Chọn Trạng Thái", new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-right" style="margin-left: 111px;">
                <input type="submit" value="Lưu" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<link href="@Url.Content("~/Content/Clients/plugins/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/Clients/plugins/jquery-ui/jquery-ui.min.js")" type="text/javascript"></script>
